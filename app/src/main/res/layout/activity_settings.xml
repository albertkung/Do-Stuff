<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="albertkung.tsma.SettingsActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_label_1"
        android:textColor="@color/black" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/black"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Name: " />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameField"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="@dimen/wide_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Password: " />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passField"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayLabel"
        android:text="@string/settings_label_2"
        android:textColor="@color/black"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/black"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Background: " />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_weight="1" />
    </LinearLayout>
    <CheckBox
        android:text="Show greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/greetingCheckBox" />
    <CheckBox
        android:text="Show weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weatherCheckBox" />
    <CheckBox
        android:text="Show tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskCheckBox" />

</LinearLayout>
